---
import Layout from "../layouts/Layout.astro";

export interface Props {
  title?: string;
  description?: string;
  code?: number;
  showReload?: boolean;
}

const {
  title = "Something went wrong",
  description = "An unexpected error occurred. Please try again.",
  code = 500,
  showReload = false,
} = Astro.props;
---

<Layout>
  <div class="min-h-screen flex items-center justify-center px-4 md:px-16">
    <div class="max-w-2xl mx-auto text-center fade-in">
      <!-- Error Code -->
      <div class="mb-8">
        <h1 class="font-mono text-8xl md:text-9xl font-bold text-purple-600">
          {code}
        </h1>
      </div>

      <!-- Error Message -->
      <div class="mb-8">
        <h2 class="font-sans text-2xl md:text-3xl font-medium text-gray-900 mb-4">
          {title}
        </h2>
        <p class="font-sans text-lg text-gray-700 leading-relaxed">
          {description}
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        {
          showReload && (
            <button
              onclick="window.location.reload()"
              class="inline-flex items-center px-6 py-3 font-mono text-sm bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors"
            >
              ↻ Reload Page
            </button>
          )
        }
        <a
          href="/"
          class="inline-flex items-center px-6 py-3 font-mono text-sm bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors"
        >
          ← Back to Home
        </a>
        <a
          href="/events"
          class="inline-flex items-center px-6 py-3 font-mono text-sm border-2 border-purple-600 text-purple-600 rounded-lg hover:bg-purple-50 transition-colors"
        >
          View Events
        </a>
      </div>

      <!-- Additional Help -->
      <div class="mt-12 pt-8 border-t border-gray-200">
        <p class="font-sans text-sm text-gray-600">
          Need help? Check out our <a
            href="/hardware"
            class="text-purple-600 hover:text-purple-800 transition-colors underline"
            >hardware</a
          >, read the <a
            href="/log"
            class="text-purple-600 hover:text-purple-800 transition-colors underline"
            >lab logs</a
          >, or learn <a
            href="/about"
            class="text-purple-600 hover:text-purple-800 transition-colors underline"
            >about us</a
          >.
        </p>
      </div>
    </div>
  </div>
</Layout>
