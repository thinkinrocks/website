---
import { FaDiscord, FaLinkedin, FaTelegram, FaInstagram } from "react-icons/fa";

// Get current page from Astro.url
const currentPath = Astro.url.pathname;
---

<!-- Navigation positioned across full width -->
<div class="fixed top-0 left-0 right-0 z-40 bg-[#fff4fe]">
  <!-- Desktop Navigation -->
  <div class="hidden md:block px-4 md:px-16">
    <div class="max-w-6xl mx-auto">
      <div class="flex items-center justify-between h-12 w-full">
        <!-- Navigation Links -->
        <div class="flex items-center space-x-2">
          <a href="/" class={`font-mono nav-item hover:text-indigo-600 ${(currentPath === '/' || currentPath === '') ? 'text-indigo-600 font-medium' : 'text-gray-700'}`}>Thinkin'Rocks</a>
          <span class="text-gray-700">|</span>
          <a href="/hardware" class={`font-mono nav-item hover:text-indigo-600 ${currentPath === '/hardware' ? 'text-indigo-600 font-medium' : 'text-gray-700'}`}>hardware</a>
          <span class="text-gray-700">|</span>
          <a href="/space" class={`font-mono nav-item hover:text-indigo-600 ${currentPath === '/space' ? 'text-indigo-600 font-medium' : 'text-gray-700'}`}>space</a>
          <span class="text-gray-700">|</span>
          <a href="/questions" class={`font-mono nav-item hover:text-indigo-600 ${currentPath === '/questions' ? 'text-indigo-600 font-medium' : 'text-gray-700'}`}>questions</a>
          <span class="text-gray-700">|</span>
          <a href="/log" class={`font-mono nav-item hover:text-indigo-600 ${currentPath === '/log' ? 'text-indigo-600 font-medium' : 'text-gray-700'}`}>log</a>
          <span class="text-gray-700">|</span>
          <a href="/code-of-conduct" class={`font-mono nav-item hover:text-indigo-600 ${currentPath === '/code-of-conduct' ? 'text-indigo-600 font-medium' : 'text-gray-700'}`}>code</a>
        </div>
        
        <!-- Social Media Icons -->
        <div class="flex items-center space-x-3">
          <a href="https://discord.gg/5MEu6njksN" class="text-gray-700" aria-label="Discord">
            <FaDiscord className="w-4 h-4" />
          </a>
          
          <a href="https://www.linkedin.com/company/thinkin-rocks/" class="text-gray-700" aria-label="LinkedIn">
            <FaLinkedin className="w-4 h-4" />
          </a>
          
          <a href="https://t.me/thinkinrocks" class="text-gray-700" aria-label="Telegram">
            <FaTelegram className="w-4 h-4" />
          </a>
          
          <a href="https://instagram.com/thinkinrocks" class="text-gray-700" aria-label="Instagram">
            <FaInstagram className="w-4 h-4" />
