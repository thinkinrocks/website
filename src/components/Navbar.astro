<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>

<script>
  // Center a specific nav item in mobile navigation
  function centerNavItem(item, animated = true) {
    const container = document.getElementById('mobile-nav-container');
    if (!container || !item) return;
    
    // Calculate position to center the item
    const containerWidth = container.clientWidth;
    const itemRect = item.getBoundingClientRect();
    const containerRect = container.getBoundingClientRect();
    
    // Calculate scroll position to center the item
    const itemRelativePos = itemRect.left - containerRect.left + container.scrollLeft;
    const itemWidth = itemRect.width;
    const scrollTo = itemRelativePos - (containerWidth / 2) + (itemWidth / 2);
    
    // Scroll to center the item (with or without animation)
    container.scrollTo({
      left: Math.max(0, scrollTo),
      behavior: animated ? 'smooth' : 'instant'
    });
  }
  
  // Center the active page in mobile navigation on load (no animation)
  function centerActiveNavItemOnLoad() {
    const container = document.getElementById('mobile-nav-container');
    if (!container) return;
    
    // Find the active nav item (highlighted one)
    let activeItem = container.querySelector('.text-indigo-600');
    
    // Fallback: if no active item found, check if we're on home page and center Thinkin'Rocks
    if (!activeItem) {
      const currentPath = window.location.pathname;
      if (currentPath === '/' || currentPath === '') {
        activeItem = container.querySelector('a[href="/"]');
      }
    }
    
    if (!activeItem) return;
    
    // Small delay to ensure styles are applied and layout is complete
    setTimeout(() => {
      centerNavItem(activeItem, false);
    }, 50);
  }
  
  // Handle navigation clicks: scroll first, then navigate
  function handleNavClick(event) {
    // Only handle clicks on nav links, not social media or other links
    if (!event.target.classList.contains('nav-link')) return;
    
    // Prevent default navigation
    event.preventDefault();
    
    const clickedLink = event.target;
    const targetUrl = clickedLink.href;
    
    // Center the clicked item first (with animation)
    centerNavItem(clickedLink, true);
    
    // Navigate after a short delay to show the scroll animation
    setTimeout(() => {
      window.location.href = targetUrl;
    }, 250); // 250ms allows the scroll animation to be visible
  }
  
  // Set up event listeners
  function setupNavigation() {
    const container = document.getElementById('mobile-nav-container');
    if (!container) return;
    
    // Add click event listener to the container (event delegation)
    container.addEventListener('click', handleNavClick);
    
    // Center the active item on load (without animation)
    centerActiveNavItemOnLoad();
  }
  
  // Run on page load
  document.addEventListener('DOMContentLoaded', setupNavigation);
  
  // Run after page transitions (for SPAs, if applicable)
  document.addEventListener('astro:page-load', setupNavigation);
</script>

<!-- Spacer to account for fixed navbar -->
