<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  
  /* Hide page content until navbar is positioned */
  body:not(.nav-ready) {
    opacity: 0;
  }
  
  body.nav-ready {
    opacity: 1;
    transition: opacity 0.1s ease-in;
  }
  
  /* Apple-style glass morphism effect */
  #navbar.navbar-scrolled {
    background-color: rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(20px) saturate(120%) brightness(110%);
    -webkit-backdrop-filter: blur(20px) saturate(120%) brightness(110%);
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
  }
  
  /* Firefox fallback (doesn't support backdrop-filter well) */
  @supports not (backdrop-filter: blur(20px)) {
    #navbar.navbar-scrolled {
      background-color: rgba(255, 255, 255, 0.75);
    }
  }
</style>

<script is:inline>
  // Position mobile nav before showing page
  window.positionMobileNavImmediate = function() {
    if (window.innerWidth >= 768) {
      document.body.classList.add('nav-ready');
      return;
    }
    
    const mobileNav = document.getElementById('mobile-nav-scroll');
    if (!mobileNav) {
      document.body.classList.add('nav-ready');
      return;
    }
    
    const activeLink = mobileNav.querySelector('a.text-purple-600');
    if (!activeLink) {
      document.body.classList.add('nav-ready');
      return;
    }
    
    let attempts = 0;
    const maxAttempts = 3;
    
    function tryPosition() {
      attempts++;
      
      // Calculate scroll position
      const navWidth = mobileNav.clientWidth;
      const linkRect = activeLink.getBoundingClientRect();
      const navRect = mobileNav.getBoundingClientRect();
      
      // Check if layout is ready (elements have dimensions)
      if (navWidth === 0 || linkRect.width === 0) {
        if (attempts < maxAttempts) {
          setTimeout(tryPosition, 50);
          return;
        }
      }
      
      const linkCenter = linkRect.left - navRect.left + linkRect.width / 2;
      const viewportCenter = navWidth / 2;
      const scrollOffset = mobileNav.scrollLeft + linkCenter - viewportCenter;
      
      // Position instantly
      mobileNav.scrollLeft = scrollOffset;
      
      // Show page after positioning
      document.body.classList.add('nav-ready');
    }
    
    // Start positioning with a small delay
    setTimeout(tryPosition, 50);
  };
  
  // Run when page is fully loaded
  if (document.readyState === 'complete') {
    window.positionMobileNavImmediate();
  } else {
    window.addEventListener('load', window.positionMobileNavImmediate);
  }
</script>

<script>
  // Handle TR button clicks to reload homepage animations
  function setupTRLinks() {
    const trLinkDesktop = document.getElementById('tr-link-desktop');
    const trLinkMobile = document.getElementById('tr-link-mobile');

    function handleTRClick(e: Event) {
      const currentPath = window.location.pathname;
      // If we're already on the homepage, force reload to trigger animations
      if (currentPath === '/' || currentPath === '') {
        e.preventDefault();
        window.location.reload();
      }
      // Otherwise, allow normal navigation
    }

    if (trLinkDesktop) {
      trLinkDesktop.addEventListener('click', handleTRClick);
    }
    if (trLinkMobile) {
      trLinkMobile.addEventListener('click', handleTRClick);
    }
  }

  // Handle navbar background on scroll
  function setupNavbarScroll() {
    const navbar = document.getElementById('navbar');
    if (!navbar) return;

    function handleScroll() {
      // Find the title element (h1)
      const title = document.querySelector('h1');
      if (!title) {
        // Fallback to simple scroll check if title not found
        if (window.scrollY > 0) {
          navbar.classList.add('navbar-scrolled');
        } else {
          navbar.classList.remove('navbar-scrolled');
        }
        return;
      }

      // Get the position of the title
      const titleRect = title.getBoundingClientRect();
      const navbarHeight = navbar.offsetHeight;

      // Add class when navbar reaches the title
      if (titleRect.top <= navbarHeight) {
        navbar.classList.add('navbar-scrolled');
      } else {
        navbar.classList.remove('navbar-scrolled');
      }
    }

    window.addEventListener('scroll', handleScroll);
    // Set initial state
    handleScroll();
  }

  // Center a nav item on mobile
  function centerNavItem(link: Element, instant: boolean = false) {
    // Only run on mobile
    if (window.innerWidth >= 768) return;

    const mobileNav = document.querySelector('.md\\:hidden .overflow-x-auto') as HTMLElement;
    if (!mobileNav || !link) return;

    // Calculate scroll position to center the link
    const navWidth = mobileNav.clientWidth;
    const linkRect = link.getBoundingClientRect();
    const navRect = mobileNav.getBoundingClientRect();
    const linkCenter = linkRect.left - navRect.left + linkRect.width / 2;
    const viewportCenter = navWidth / 2;
    const scrollOffset = mobileNav.scrollLeft + linkCenter - viewportCenter;

    if (instant) {
      // Set scroll position directly without animation
      mobileNav.scrollLeft = scrollOffset;
    } else {
      // Smooth scroll for user interactions
      mobileNav.scrollTo({
        left: scrollOffset,
        behavior: 'smooth'
      });
    }
  }

  // Center active nav item on mobile
  function centerActiveNavItem(instant: boolean = false) {
    // Only run on mobile
    if (window.innerWidth >= 768) return;

    const mobileNav = document.querySelector('.md\\:hidden .overflow-x-auto');
    if (!mobileNav) return;

    // Find the active link (has text-purple-600 class)
    const activeLink = mobileNav.querySelector('a.text-purple-600');
    if (!activeLink) return;

    centerNavItem(activeLink, instant);
  }

  // Setup click handlers for mobile nav links
  function setupMobileNavClicks() {
    const mobileNav = document.querySelector('.md\\:hidden .overflow-x-auto');
    if (!mobileNav) return;

    const navLinks = mobileNav.querySelectorAll('a[data-page], a#tr-link-mobile');
    navLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        // Center the clicked link
        centerNavItem(link);
      });
    });
  }

  // Run on page load
  setupTRLinks();
  setupNavbarScroll();
  setupMobileNavClicks();

  // Re-run on Astro page transitions (if View Transitions are enabled)
  document.addEventListener('astro:page-load', () => {
    // Reset nav-ready for new page
    document.body.classList.remove('nav-ready');
    
    // Position immediately on page transition
    if (typeof (window as any).positionMobileNavImmediate === 'function') {
      (window as any).positionMobileNavImmediate();
    }
    setupTRLinks();
    setupNavbarScroll();
    setupMobileNavClicks();
  });
</script>


