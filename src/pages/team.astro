---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import MilanaPic from "../assets/team/milana.png";
import YerzhanPic from "../assets/team/yerzhan.png";
import DaniyarPic from "../assets/team/daniyar.png";
import AlexPic from "../assets/team/alex.png";
import RobertPic from "../assets/team/robert.png";
---

<Layout>
  <div class="pt-24 md:pt-32 pb-16 px-4 md:px-16">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-5xl md:text-4xl font-mono tracking-tighter mb-4 text-center">
        Team
      </h1>
      <p class="text-xl font-sans text-center mb-6 max-w-3xl mx-auto text-gray-600">
        Meet the people behind Thinkin' Rocks
      </p>
      
      <!-- Team Members -->
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-2 mb-10">
        <div class="text-center">
          <div class="w-32 h-32 bg-gray-200 rounded-lg mx-auto mb-2 overflow-hidden border border-gray-300">
            <Image
              src={MilanaPic}
              alt="Milana"
              class="w-32 h-32 object-cover"
              width={128}
              height={128}
              quality="low"
              loading="eager"
              priority
            />
          </div>
          <h3 class="text-xs font-mono mb-0.5 text-gray-900">Milana</h3>
          <p class="font-sans text-xs text-gray-600 leading-tight w-32 mx-auto"><span class="font-mono text-indigo-500">disc: @foxivil</span><br>can't live without coffee and anime. watched one piece twice.</p>
        </div>
        
        <div class="text-center">
          <div class="w-32 h-32 bg-gray-200 rounded-lg mx-auto mb-2 overflow-hidden border border-gray-300">
            <Image
              src={YerzhanPic}
              alt="Yerzhan"
              class="w-32 h-32 object-cover"
              width={128}
              height={128}
              quality="low"
              loading="eager"
              priority
            />
          </div>
          <h3 class="text-xs font-mono mb-0.5 text-gray-900">Yerzhan</h3>
          <p class="font-sans text-xs text-gray-600 leading-tight w-32 mx-auto"> <span class="font-mono text-indigo-500">disc: @yerzham</span><br>applied for Y-combinator before it became mainstream.</p>
        </div>
        
        <div class="text-center">
          <div class="w-32 h-32 bg-gray-200 rounded-lg mx-auto mb-2 overflow-hidden border border-gray-300">
            <Image
              src={RobertPic}
              alt="Robert"
              class="w-32 h-32 object-cover"
              width={128}
              height={128}
              quality="low"
              loading="eager"
              priority
            />
          </div>
          <h3 class="text-xs font-mono mb-0.5 text-gray-900">Robert</h3>
          <p class="font-sans text-xs text-gray-600 leading-tight w-32 mx-auto"><span class="font-mono text-indigo-500">disc: @oxrinz</span><br>Muramasa.<br>Milana: "too short".<br>Robert: "it's perfect"</p>
        </div>
        
        <div class="text-center">
          <div class="w-32 h-32 bg-gray-200 rounded-lg mx-auto mb-2 overflow-hidden border border-gray-300">
            <Image
              src={DaniyarPic}
              alt="Daniyar"
              class="w-32 h-32 object-cover"
              width={128}
              height={128}
              quality="low"
              loading="eager"
              priority
            />
          </div>
          <h3 class="text-xs font-mono mb-0.5 text-gray-900">Daniyar</h3>
          <p class="font-sans text-xs text-gray-600 leading-tight w-32 mx-auto"><span class="font-mono text-indigo-500">disc: @.blocky7</span><br>coding since 7th grade, still pretending to know what hardware is.</p>
        </div>
        
        <div class="text-center">
          <div class="w-32 h-32 bg-gray-200 rounded-lg mx-auto mb-2 overflow-hidden border border-gray-300">
            <Image
              src={AlexPic}
              alt="Alex"
              class="w-32 h-32 object-cover"
              width={128}
              height={128}
              quality="low"
              loading="eager"
              priority
            />
          </div>
          <h3 class="text-xs font-mono mb-0.5 text-gray-900">Alex</h3>
          <p class="font-sans text-xs text-gray-600 leading-tight w-32 mx-auto"><span class="font-mono text-indigo-500">disc: @al.ex.</span><br>started learning english to understand computer errors.</p>
        </div>
        
        <div class="text-center">
          <a href="mailto:milana.begantsova@aaltoes.com" class="block">
            <div class="w-32 h-32 bg-gray-200 rounded-lg mx-auto mb-2 flex items-center justify-center hover:bg-gray-300 transition-colors">
              <span class="text-2xl font-mono text-gray-500">+</span>
            </div>
            <h3 class="text-xs font-mono mb-0.5 text-gray-900 hover:text-indigo-600 transition-colors">Join Us</h3>
          </a>
        </div>
      </div>

      <!-- Location Section -->
      <div class="text-center mb-4">
        <h2 class="text-2xl font-mono mb-4 text-gray-900">
          Our Location
        </h2>
        <div class="max-w-3xl mx-auto">
          <p class="text-lg font-sans text-gray-700 mb-4">
            <span class="font-mono text-indigo-800">üìç</span> Puumiehenkuja 5, 02150 Espoo, Finland
          </p>
          
          <!-- Embedded Map -->
          <div class="bg-gray-100 rounded-lg overflow-hidden">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d992.5!2d24.8216183!3d60.1877326!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x468df58d0e541191%3A0x1d783914b8c6d695!2sStartup%20Sauna%2C%20Puumiehenkuja%205%2C%2002150%20Espoo!5e0!3m2!1sen!2sfi!4v1706789012345!5m2!1sen!2sfi"
              width="100%"
              height="300"
              style="border:0; filter: hue-rotate(320deg) saturate(0.6) brightness(0.95) contrast(0.9);"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Startup Sauna Location - Puumiehenkuja 5"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
