---
import Layout from "../layouts/Layout.astro";
import HardwareSearch from "../components/HardwareSearch.tsx";
import hardwareItemsData from "../data/hardware-items.json";
import type { HardwareItem } from "../types/hardware";

const hardwareItems = hardwareItemsData as HardwareItem[];
---

<Layout>
  <div class="py-16 px-4 md:px-16">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-5xl md:text-4xl font-mono tracking-tighter mb-4 text-center">
        Hardware
      </h1>
      <p class="text-xl font-sans text-center mb-12 max-w-3xl mx-auto text-gray-600">
        Available equipment for community members
      </p>
     
      <!-- Hardware Search Component -->
      <HardwareSearch items={hardwareItems} client:load />

    </div>
  </div>
</Layout>
