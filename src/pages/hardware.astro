---
import Layout from "../layouts/Layout.astro";
import HardwareSearch from "../components/HardwareSearch.tsx";
import hardwareItemsData from "../data/hardware-items.json";
import type { HardwareItem } from "../types/hardware";

const hardwareItems = hardwareItemsData as HardwareItem[];
---

<Layout>
  <div class="pt-24 md:pt-32 pb-16 px-4 md:px-16">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-2xl md:text-4xl font-mono tracking-tighter mb-4">
        Hardware
      </h1>
      <p class="text-xl font-sans mb-12 max-w-3xl text-gray-600">
        All hardware available for community members. You can use it for your projects inside of our <a href="/space" class="text-indigo-600 hover:text-indigo-800 transition-colors">space</a> at Startup Sauna.
      </p>
     
      <!-- Hardware Search Component -->
      <HardwareSearch items={hardwareItems} client:load />

      <!-- Contact Section -->
      <div class="text-center mt-16">
        <h2 class="text-2xl font-mono mb-4 text-gray-900">
          Didn't Find What You Were Looking For?
        </h2>
        <p class="text-lg font-sans mb-8 text-gray-700 max-w-2xl mx-auto">
          Don't hesitate to reach out. We're here to help!
        </p>
        <div class="flex flex-wrap justify-center gap-2">
          <div class="bg-indigo-600 h-fit translate-0.5">
            <a 
              href="mailto:team@thinkinrocks.com" 
              class="bg-indigo-50 text-indigo-600 inline-flex px-4 py-2 -translate-0.5 items-center gap-2 whitespace-nowrap font-mono"
            >
              Contact us
            </a>
          </div>
        </div>
      </div>

    </div>
  </div>
</Layout>
