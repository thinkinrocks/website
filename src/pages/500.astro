---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="min-h-screen flex items-center justify-center px-4">
    <div class="text-center">
      <h1 class="font-mono text-9xl font-bold text-purple-600 mb-4">500</h1>
      <p class="font-sans text-xl text-gray-700 mb-8">Server error</p>
      <button onclick="window.location.reload()" class="font-mono text-purple-600 hover:text-purple-800 mr-4">↻ Reload</button>
      <a href="/" class="font-mono text-purple-600 hover:text-purple-800">← Home</a>
    </div>
  </div>
</Layout>
