---
import Layout from "../../layouts/Layout.astro";
import type { HardwareItem } from "../../types/hardware";
import { AdvancedImage } from '@cloudinary/react';
import { fit } from "@cloudinary/url-gen/actions/resize";
import { cloudinary } from "../../data/cloudinary";

export async function getStaticPaths() {
  const hardwareItemsData = await import("../../data/hardware-items.json");
  const hardwareItems = hardwareItemsData.default as HardwareItem[];
  
  return hardwareItems.map((item) => ({
    params: { id: item.id },
    props: { item, allItems: hardwareItems },
  }));
}

const { item, allItems } = Astro.props as { item: HardwareItem; allItems: HardwareItem[] };

// Get related hardware items
const relatedItems = item.related
  ? allItems.filter(hardwareItem => item.related.includes(hardwareItem.id))
  : [];

// Function to truncate description by word count
const truncateDescription = (text: string, wordLimit: number = 20) => {
  const words = text.split(' ');
  return words.slice(0, wordLimit).join(' ') + (words.length > wordLimit ? '...' : '');
};

const getStatusBadge = (status: string) => {
  switch (status) {
    case 'coming-soon':
      return 'coming soon';
    case 'maintenance':
      return 'maintenance';
    default:
      return null;
  }
};
---

<Layout>
  <div class="pt-24 md:pt-32 pb-16 px-4 md:px-16">
    <div class="max-w-4xl mx-auto">
      <!-- Back Button -->
      <div class="mb-8">
        <a 
          href="/hardware" 
          class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-mono text-sm transition-colors"
        >
          ← Back to Hardware
        </a>
      </div>

      <!-- Hardware Details -->
      <div class="mb-16">
        <!-- Image -->
        <div class="flex items-center justify-center mb-8">
          <AdvancedImage
            cldImg={cloudinary
              .image(item.cloudinaryPublicId)
              .resize(fit().width(500).height(500))}
            alt={item.name}
            className="w-96 h-96 object-contain"
            client:load
          />
        </div>

        <!-- Details -->
        <div class="space-y-6">
          <div>
            <h1 class="text-5xl md:text-4xl font-mono tracking-tighter mb-4">
              {item.name}
            </h1>
            
            {item.status !== 'available' && (
              <div class="mb-4">
                <span class={`text-xs font-mono px-3 py-1 rounded ${
                  item.status === 'coming-soon' 
                    ? 'text-indigo-600 bg-indigo-50' 
                    : 'text-orange-600 bg-orange-50'
                }`}>
                  {getStatusBadge(item.status)}
                </span>
              </div>
            )}
          </div>

         
          <div>
            <div class="font-sans text-lg text-gray-700 leading-relaxed prose prose-lg max-w-none prose-headings:font-mono prose-a:text-indigo-600 prose-a:no-underline hover:prose-a:text-indigo-800 prose-strong:text-gray-900 prose-h1:text-3xl prose-h2:text-2xl prose-h3:text-xl prose-h4:text-lg prose-ul:list-disc prose-ol:list-decimal">
              {item.details.map((paragraph, index) => (
                <p class="mb-6" set:html={paragraph
                  .replace(/^### (.*$)/gm, '<h3>$1</h3>')
                  .replace(/^## (.*$)/gm, '<h2>$1</h2>')
                  .replace(/^# (.*$)/gm, '<h1>$1</h1>')
                  .replace(/^\* (.*$)/gm, '<li>$1</li>')
                  .replace(/^- (.*$)/gm, '<li>$1</li>')
                  .replace(/^(\d+)\. (.*$)/gm, '<li>$1. $2</li>')
                  .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                  .replace(/\*(.*?)\*/g, '<em>$1</em>')
                  .replace(/`(.*?)`/g, '<code class="bg-gray-100 px-1 py-0.5 rounded text-sm font-mono">$1</code>')
                  .replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2" class="text-indigo-600 hover:text-indigo-800 underline" target="_blank" rel="noopener noreferrer">$1</a>')
                  .replace(/(<li>.*<\/li>)/s, '<ul>$1</ul>')
                } />
              ))}
            </div>
          </div>
        </div>
      </div>

      <!-- Related Hardware -->
      {relatedItems.length > 0 && (
        <div class="pt-16">
          <h2 class="text-2xl font-mono mb-8 text-gray-900">
            Related Hardware
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
            {relatedItems.map((relatedItem) => (
              <div class="border border-gray-200 rounded-lg p-4 flex flex-col">
                <div class="flex items-center justify-center mb-4">
                  <AdvancedImage
                    cldImg={cloudinary
                      .image(relatedItem.cloudinaryPublicId)
                      .resize(fit().width(128).height(128))}
                    alt={relatedItem.name}
                    className="w-16 h-16 object-contain"
                    client:load
                  />
                </div>
                <h3 class="font-mono text-lg text-gray-900 mb-2 text-center">{relatedItem.name}</h3>
                {relatedItem.status !== 'available' && (
                  <div class="text-center mb-2">
                    <span class={`text-xs font-mono px-2 py-1 rounded ${
                      relatedItem.status === 'coming-soon' 
                        ? 'text-indigo-600 bg-indigo-50' 
                        : 'text-orange-600 bg-orange-50'
                    }`}>
                      {getStatusBadge(relatedItem.status)}
                    </span>
                  </div>
                )}
                <p class="font-sans text-sm text-gray-700 leading-relaxed mb-4 text-center">
                  {truncateDescription(relatedItem.description)}
                </p>
                <div class="flex justify-center mt-auto">
                  <div class="bg-indigo-600 h-fit translate-0.5">
                    <a 
                      href={`/hardware/${relatedItem.id}`}
                      class="bg-indigo-50 text-indigo-600 inline-flex px-4 py-2 -translate-0.5 items-center gap-2 whitespace-nowrap font-mono"
                    >
                      read more
                    </a>
                  </div>
                </div>
              </div>
            ))}
          </div>
          <div class="text-center">
            <a 
              href="/hardware" 
              class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-mono transition-colors"
            >
              View All Hardware →
            </a>
          </div>
        </div>
      )}
    </div>
  </div>
</Layout>
