---
export const prerender = true;

import Layout from "../../layouts/Layout.astro";
import type { HardwareItem } from "../../types/hardware";
import { AdvancedImage } from '@cloudinary/react';
import { fit } from "@cloudinary/url-gen/actions/resize";
import { cloudinary } from "../../data/cloudinary";
import { HardwareCarousel } from "../../components/HardwareCarousel";

export async function getStaticPaths() {
  const hardwareItemsData = await import("../../data/hardware-items.json");
  const hardwareItems = hardwareItemsData.default as HardwareItem[];
  
  return hardwareItems.map((item) => ({
    params: { id: item.id },
    props: { item, allItems: hardwareItems },
  }));
}

const { item, allItems } = Astro.props as { item: HardwareItem; allItems: HardwareItem[] };

// Get related hardware items
const relatedItems = item?.related
  ? allItems.filter(hardwareItem => item.related!.includes(hardwareItem.id))
  : [];

// Function to truncate description by word count
const truncateDescription = (text: string, wordLimit: number = 20) => {
  const words = text.split(' ');
  return words.slice(0, wordLimit).join(' ') + (words.length > wordLimit ? '...' : '');
};

const getStatusBadge = (status: string) => {
  switch (status) {
    case 'coming-soon':
      return 'coming soon';
    case 'maintenance':
      return 'maintenance';
    default:
      return null;
  }
};
---

<Layout>
  <div class="pt-16 md:pt-24 pb-16 px-4 md:px-16">
    <div class="max-w-5xl mx-auto">
      <!-- Back Button -->
      <div class="mb-8">
        <a 
          href="/hardware" 
          class="inline-flex items-center text-purple-600 hover:text-purple-800 font-mono text-sm transition-colors"
        >
          ← Back to Hardware
        </a>
      </div>

      <!-- Hardware Details -->
      <div class="mb-16">
        <!-- Image or Carousel -->
        {item.images && item.images.length > 0 ? (
          <HardwareCarousel images={item.images} name={item.name} captions={item.imageCaptions} client:load />
        ) : item.cloudinaryPublicId && (
          <div class="flex flex-col items-center justify-center mb-8">
            <AdvancedImage
              cldImg={cloudinary
                .image(item.cloudinaryPublicId)
                .resize(fit().width(500).height(500))}
              alt={item.name}
              className="w-96 h-96 object-contain"
              client:load
            />
            <p class="text-gray-400 text-sm mt-2 font-mono">{item.name}</p>
          </div>
        )}

        <!-- Details -->
        <div class="space-y-6">
          <div>
            <h1 class="text-4xl md:text-5xl font-display font-bold tracking-tighter mb-4 text-center">
              {item.name}
            </h1>
          </div>

         
          <div>
            <div class="font-sans text-lg text-gray-700 leading-relaxed prose prose-lg max-w-none prose-headings:font-mono prose-a:text-purple-600 prose-a:no-underline hover:prose-a:text-purple-800 prose-strong:text-gray-900 prose-h1:text-3xl prose-h2:text-2xl prose-h3:text-xl prose-h4:text-lg prose-ul:list-disc prose-ol:list-decimal">
              {item.details.map((paragraph, index) => (
                <p class="mb-6" set:html={paragraph
                  .replace(/^### (.*$)/gm, '<h3>$1</h3>')
                  .replace(/^## (.*$)/gm, '<h2>$1</h2>')
                  .replace(/^# (.*$)/gm, '<h1>$1</h1>')
                  .replace(/^\* (.*$)/gm, '<li>$1</li>')
                  .replace(/^- (.*$)/gm, '<li>$1</li>')
                  .replace(/^(\d+)\. (.*$)/gm, '<li>$1. $2</li>')
                  .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                  .replace(/\*(.*?)\*/g, '<em>$1</em>')
                  .replace(/`(.*?)`/g, '<code class="bg-gray-100 px-1 py-0.5 text-sm font-mono">$1</code>')
                  .replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2" class="text-purple-600 hover:text-purple-800 underline" target="_blank" rel="noopener noreferrer">$1</a>')
                  .replace(/(<li>.*<\/li>)/s, '<ul>$1</ul>')
                } />
              ))}
            </div>
          </div>
        </div>
      </div>

      <!-- Related Hardware -->
      {relatedItems.length > 0 && (
        <div class="pt-8">
          <h2 class="text-xl font-display font-bold tracking-tighter mb-4 text-gray-900">
            Related Hardware
          </h2>
          <div class="space-y-3 mb-4">
            {relatedItems.map((relatedItem) => (
              <a
                href={`/hardware/${relatedItem.id}`}
                class="block group"
              >
                <div class="py-1 flex gap-2 md:gap-3 items-center">
                  {(relatedItem.images && relatedItem.images.length > 0) || relatedItem.cloudinaryPublicId ? (
                    <div class="flex-shrink-0">
                      {relatedItem.images && relatedItem.images.length > 0 ? (
                        <img
                          src={relatedItem.images[0]}
                          alt={relatedItem.name}
                          class="w-20 h-20 md:w-28 md:h-28 object-contain rounded"
                        />
                      ) : relatedItem.cloudinaryPublicId ? (
                        <AdvancedImage
                          cldImg={cloudinary
                            .image(relatedItem.cloudinaryPublicId)
                            .resize(fit().width(224).height(224))}
                          alt={relatedItem.name}
                          className="w-20 h-20 md:w-28 md:h-28 object-contain rounded"
                          client:load
                        />
                      ) : null}
                    </div>
                  ) : null}
                  <div class="flex-1 min-w-0">
                    <h3 class="text-sm md:text-lg font-display mb-1 text-gray-900 group-hover:text-purple-600 transition-colors">
                      {relatedItem.name}
                    </h3>
                    <p class="font-sans text-sm md:text-base text-gray-600 break-words">
                      {truncateDescription(relatedItem.description, 35)}
                    </p>
                  </div>
                </div>
              </a>
            ))}
          </div>
          <div class="text-center">
            <a
              href="/hardware"
              class="inline-flex items-center text-purple-600 hover:text-purple-800 font-mono transition-colors"
            >
              View All Hardware →
            </a>
          </div>
        </div>
      )}
    </div>
  </div>
</Layout>
